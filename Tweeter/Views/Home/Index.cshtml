@{
    ViewBag.Title = "Home Page";
}


@if (User.Identity.IsAuthenticated)
{

    <div ng-app="appy" class="container">
        <div class="row">
            <div class="col-xs-4">
                <div class="row">
                    <img src="https://avatars1.githubusercontent.com/u/12372026?v=3&u=7a66aa3031a9ab6f318428445ff81def097a1d3c&s=400" width="200" height="200" />
                    <p style="text-align:center">@User.Identity.Name</p>
                    <p style="text-align:center"># of followers</p>
                </div>
                <div class="row">
                    <h3>Today's Twits</h3>
                </div>
            </div>
            <div class="col-xs-8">
                <div class="row">
                    <input type="text" ng-model=twet name="compose" placeholder="Compose..." />
                    <button ng-click class="btn">+</button>
                </div>
                <div class="row">
                    <img src="http://www.thesmokingtire.com/wp-content/uploads/2011/12/stormtrooper-helmet.jpg" width="200" height="200" />
                </div>
                <div class="row">
                    <textarea name="textarea" rows="10" cols="25">Write something here</textarea>
                </div>
            </div>
        </div>
    </div>
}




